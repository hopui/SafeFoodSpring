<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.model.mapper.Book">
	<select id="selectAll" resultType="book">
		select * from book
	</select>

	<select id="select" resultType="book" parameterType="string">
		select * from book where isbn=#{isbn}
	</select>

	<insert id="insert" parameterType="book">
		insert into book values(#{isbn}, #{title}, #{author}, #{publisher}, #{description})
	</insert>

	<update id="update" parameterType="book">
		update book set title=#{title}, author=#{author} , publisher=#{publisher} ,
		                description=#{description} where isbn=#{isbn}
	</update>
	<delete id="delete" parameterType="string">
		delete from book where isbn=#{isbn}
	</delete>
</mapper>